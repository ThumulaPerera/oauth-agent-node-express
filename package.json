{
    "name": "oauth-agent-node-express",
    "version": "1.0.0",
    "description": "An OAuth Agent that runs on the Express web server",
    "scripts": {
        "build": "rimraf dist && tsc",
        "start": "eval $(cat .env) ts-node src/server.ts",
        "start-test-server": "eval $(cat .testenv) ts-node src/server.ts",
        "wiremock": "wiremock --root-dir test/integration --port 8443",
        "test": "eval $(cat .testenv) jest --testTimeout=5000 --detectOpenHandles"
    },
    "author": "Curity AB",
    "license": "Apache-2.0",
    "engines": {
        "node": ">=18"
    },
    "dependencies": {
        "base64url": "^3.0.1",
        "cookie": "^0.4.1",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "ioredis": "^5.3.2",
        "jose": "^4.14.4",
        "node-fetch": "^2.6.1",
        "proxyquire": "^2.1.3",
        "sinon": "^16.0.0",
        "supertest": "^6.3.3",
        "url-parse": "^1.5.10"
    },
    "devDependencies": {
        "@types/chai": "^4.3.0",
        "@types/cookie": "^0.4.1",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.5",
        "@types/mocha": "^9.1.1",
        "@types/node-fetch": "^2.5.11",
        "@types/set-cookie-parser": "^2.4.2",
        "@types/sinon": "^10.0.17",
        "@types/supertest": "^2.0.13",
        "@types/url-parse": "^1.4.8",
        "chai": "^4.3.6",
        "ioredis-mock": "^8.8.3",
        "jest": "^29.7.0",
        "jest-fetch-mock": "^3.0.3",
        "mocha": "^9.2.2",
        "rimraf": "^3.0.2",
        "set-cookie-parser": "^2.4.8",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "wiremock": "^2.35.0"
    }
}
